<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context=".ui.about.AboutActivity"
    tools:ignore="MissingPrefix">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_about"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="1dp"
            app:navigationIcon="?attr/homeAsUpIndicator"
            style="@style/ToolbarTheme"
            app:title="About"
            app:layout_scrollFlags="scroll"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/textColorChips"
                android:paddingTop="20dp">

                    <LinearLayout
                        android:id="@+id/container_about_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:src="@mipmap/ic_launcher"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/app_name"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_about_unsplash"
                        style="@style/about_entry">

                    <LinearLayout
                        android:id="@+id/container_about_github"
                        style="@style/about_entry">

                        <ImageView
                            android:src="@drawable/ic_github_circle_black_24dp"
                            style="@style/material_icon" />

                        <TextView
                            android:text="GitHub"
                            style="@style/about_title_text"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#ffff"
                android:layout_marginTop="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:text="Author" />

                    <LinearLayout
                        android:id="@+id/container_about_author"
                        style="@style/about_entry">

                        <ImageView
                            android:src="@drawable/ic_account_circle_black_24dp"
                            style="@style/material_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="Alistair Holmes"
                                style="@style/about_title_text"/>

                            <TextView
                                android:text="Bulawayo, Zimbabwe"
                                style="@style/about_subtitle_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_about_website"
                        style="@style/about_entry">

                        <ImageView
                            android:src="@drawable/ic_earth_black_24dp"
                            style="@style/material_icon" />

                        <TextView
                            android:text="Website"
                            style="@style/about_title_text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_about_instagram"
                        style="@style/about_entry">

                        <ImageView
                            android:src="@drawable/ic_instagram_black_24dp"
                            style="@style/material_icon" />

                        <TextView
                            android:text="Follow on Instagram"
                            style="@style/about_title_text"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#ffff"
                android:layout_marginTop="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:text="Support Development" />

                    <LinearLayout
                        android:id="@+id/container_about_rate"
                        style="@style/about_entry">

                        <ImageView
                            android:src="@drawable/ic_star_black_24dp"
                            style="@style/material_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="Rate"
                                style="@style/about_title_text"/>

                            <TextView
                                android:text="If you like Digital Nomad Jobs, rate it on the Play Store"
                                style="@style/about_subtitle_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_about_donate"
                        style="@style/about_entry">

                        <ImageView
                            android:src="@drawable/ic_gift_black_24dp"
                            style="@style/material_icon" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="Donate"
                                style="@style/about_title_text"/>

                            <TextView
                                android:text="If you really like Digital Nomad Jobs, consider supporting its development by sending me a couple of dollars"
                                style="@style/about_subtitle_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_about_bug"
                        style="@style/about_entry">

                        <ImageView
                            android:src="@drawable/ic_bug_report_black_24dp"
                            style="@style/material_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="Report Bugs"
                                style="@style/about_title_text"/>

                            <TextView
                                android:text="Report bugs or request new features"
                                style="@style/about_subtitle_text"
                                android:paddingBottom="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#ffff"
                android:layout_marginTop="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:text="Libraries" />

                    <LinearLayout
                        android:id="@+id/container_about_library1"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library1_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library1_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library2"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library2_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library2_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library3"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library3_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library3_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library4"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library4_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library4_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library5"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library5_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library5_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library6"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library6_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library6_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library7"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library7_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library7_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library9"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library9_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library9_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library10"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library10_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library10_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library11"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library11_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library11_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library12"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library12_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library12_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library13"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library13_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library13_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEE" />

                    <LinearLayout
                        android:id="@+id/container_about_library14"
                        style="@style/about_library">

                        <TextView
                            android:text="@string/about_library14_title"
                            style="@style/about_title_text"/>

                        <TextView
                            android:text="@string/about_library14_subtitle"
                            style="@style/about_subtitle_text"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
