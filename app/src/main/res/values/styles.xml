<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Dnj" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">true</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="Widget.Dnj.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">#FFFF</item>
        <item name="android:theme">@style/Theme.Dnj</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Dnj.Toolbar</item>
        <item name="android:elevation">12dp</item>
    </style>

    <style name="TextAppearance.Dnj.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Chips Style -->
    <style name="TextAppearance.Dnj.Chips" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textColorChips</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Details Button -->
    <style name="Widget.Dnj.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFF</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

</resources>
