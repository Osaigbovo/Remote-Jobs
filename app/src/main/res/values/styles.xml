<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">true</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.Job">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowSharedElementExitTransition">@transition/detail_transition</item>
    </style>

    <style name="AppTheme.JobDetail">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/detail_transition</item>
    </style>

    <style name="AppTheme.Favorite">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.About">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">12dp</item>
    </style>

    <style name="TextAppearance.Dnj.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="JobImage">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:padding">1dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/image_favorite_job</item>
    </style>

    <style name="JobTitle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="JobCompany">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="JobDate">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="JobDescription">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <!-- Details Button -->
    <style name="JobButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="backgroundTintMode">multiply</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:text">@string/apply_job</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">normal</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <!-- Widget -->
    <style name="WidgetTitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textAndIcons</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CompanyNameTextStyle">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textAndIcons</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="about_entry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="about_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="about_sub_title_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="about_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="about_library">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="material_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>
